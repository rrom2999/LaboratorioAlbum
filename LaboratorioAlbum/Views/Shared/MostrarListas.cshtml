@model IEnumerable<LaboratorioAlbum.Models.Sticker>
@{
    ViewBag.Title = "MostrarListas";
}

<h4>Stickers de @ViewBag.Nombre </h4>

<p>
    @Html.ActionLink("Menu Principal", "Index")
</p>
<table class="table">
    <tr>
        <th>Opciones</th>
    </tr>
    <tr></tr>
    <tr></tr>
    <tr class="table-dark">
        <td>
            @Html.ActionLink("Faltantes", "MostrarDiccionario", new { lista = 1 })
        </td>
        <td class="table-light">
            @Html.ActionLink("Obtenidas", "MostrarDiccionario", new { lista = 2 })
        </td>
        <td>
            @Html.ActionLink("Repetidas", "MostrarDiccionario", new { lista = 3 })
        </td>
    </tr>
</table>

<table class="table table-hover">
    <tr class="table">
        <th>
            @Html.DisplayNameFor(model => model.Codigo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cantidad)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Existe)
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr class="table">
            <td>
                @Html.DisplayFor(modelItem => item.Codigo)
            </td>
            <td class="table-dark">
                @Html.DisplayFor(modelItem => item.Cantidad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Existe)
            </td>
        </tr>
    }
</table>